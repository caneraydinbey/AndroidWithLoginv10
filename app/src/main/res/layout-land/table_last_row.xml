<TableRow xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/table_last_row"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
    android:weightSum="1"
        >

        <TextView
            android:text="BASARI"
            android:layout_weight="0.16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/object_name"
            android:textAlignment="center"
            android:background="#1229ae"
            android:textColor="#e70d0d"
            android:textSize="25dp" />




        <TextView android:textAlignment="center"
            android:text="@string/trueanswer" android:layout_width="0dp" android:id="@+id/last_matching"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            android:textColor="#0f12ce"
            android:background="#f9f9f2"
            android:textAppearance="@color/accent_material_dark"
            android:textSize="25dp" />

    <TextView android:textAlignment="center"
        android:text="@string/wronganswer" android:layout_width="0dp" android:id="@+id/last_counting"
        android:layout_height="wrap_content"
        android:layout_weight="0.28"
        android:textColor="#0f12ce"
        android:background="#f9f9f2"
        android:textAppearance="@color/accent_material_dark"
        android:textSize="25dp" />

        <TextView android:textAlignment="center"
            android:text="@string/halfanswer" android:layout_width="0dp" android:id="@+id/last_choosing"
            android:layout_height="wrap_content"
            android:layout_weight="0.28"
            android:textColor="#0f12ce"
            android:background="#f9f9f2"
            android:textAppearance="@color/accent_material_dark"
            android:textSize="25dp" />





    </TableRow>

